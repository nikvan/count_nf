echo "year,count" > ~/Desktop/nextflow_counts_2018_2025.csv
for y in {2018..2025}; do
  c=$(curl -s -H "Authorization: token $GITHUB_TOKEN" \
       "https://api.github.com/search/repositories?q=language:Nextflow+fork:false+created:${y}-01-01..${y}-12-31&per_page=1" \
       | jq '.total_count')
  echo "${y},${c}"
  echo "${y},${c}" >> ~/Desktop/nextflow_counts_2018_2025.csv
done
